<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_Relative_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    tools:context="com.chrisgaddes.reaction.MainActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardPreventCornerOverlap="false"
        android:stateListAnimator="@xml/lift_up"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_current"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="16dp"
                android:src="@mipmap/ic_launcher" />

            <!--<View-->
            <!--android:id="@+id/vertical_divider_current"-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorDivider" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/problem_title_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="18dp"
                    android:text="Reaction"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/current_part_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="2"
                    android:layout_marginBottom="18dp"
                    android:text="Choose a problem below"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/load_survey"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_rate_review"
                    android:layout_alignParentEnd="true"
                    android:hint="Take survey" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/check_current"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:padding="28dp"
                android:src="@drawable/ic_check" />

            <View
                android:id="@+id/top_divider_current"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />

            <RelativeLayout
                android:id="@+id/image_layout_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/bottom_divider_current"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Startover" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Get Started" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



