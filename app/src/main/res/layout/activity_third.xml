<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_light_white"
    android:clipToPadding="false"

    android:outlineProvider="bounds">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:transitionGroup="false">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:transitionGroup="false"
            android:elevation="8dp" />
    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:background="@color/material_light_white"
        android:clipToPadding="false"

        android:outlineProvider="bounds">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_check_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="20dp"
            android:src="@drawable/ic_check"
            app:elevation="12dp"
            app:fabSize="normal"
            android:transitionGroup="false"
            app:borderWidth="0dp" />


        <RelativeLayout
            android:id="@+id/id_third_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:clipToPadding="false"

            android:outlineProvider="bounds">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tv_problem_statement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:id="@+id/btn_peek_main_prob"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_visibility"
                    android:elevation="8dp"
                    android:background="@color/material_light_white"
                    android:layout_alignParentBottom="true"
                    android:layout_weight=".3" />

                <ImageButton
                    android:id="@+id/btn_peek_parta"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_visibility"
                    android:elevation="8dp"
                    android:background="@color/material_light_white"
                    android:layout_alignParentBottom="true"
                    android:layout_weight=".3" />/>

                <ImageButton
                    android:id="@+id/btn_peek_partb"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_visibility"
                    android:elevation="8dp"
                    android:background="@color/material_light_white"
                    android:layout_alignParentBottom="true"
                    android:layout_weight=".3" />/>

                <ImageView
                    android:id="@+id/btn_blank"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:elevation="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight=".3" />/>

            </LinearLayout>


            <com.chrisgaddes.reaction.SquareImageView
                android:id="@+id/problem_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollView"
                android:clipChildren="false" />

            <com.chrisgaddes.reaction.DrawArrowsView
                android:id="@+id/idDrawArrowsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollView"
                android:clipChildren="false" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/IV_peek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.0"
            android:elevation="40dp" />

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
