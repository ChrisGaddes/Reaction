<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">

    <RelativeLayout
        android:id="@+id/third_activity_Relative_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/help"
            app:elevation="4dp"
            app:fabSize="normal" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="Restart"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/problem_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Problem #1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/problem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/problem_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/str_problem_statement" />

        <com.chrisgaddes.reaction.DrawArrowsView
            android:id="@+id/idDrawArrowsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clipChildren="false" />

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_check_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@drawable/ic_check"
                app:elevation="4dp"
                app:fabSize="normal" />

        </android.support.design.widget.CoordinatorLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lower_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_light_white"
        android:clipToPadding="false">


        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:elevation="6dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow_rect"
            android:src="@color/material_light_white"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/text_swipe_down"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="Swipe Up"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:elevation="6dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_up"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:elevation="6dp" />

        <TextView
            android:id="@id/problem_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rectangle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_problem_title"
            android:textSize="20sp" />

        <TextView
            android:id="@id/problem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/problem_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/str_problem_statement" />

        <ImageView
            android:id="@+id/problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/fbd_2"
            android:layout_below="@id/rectangle" />

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>